<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center">

        <FrameLayout
            android:layout_width="@dimen/item_drawer_image_size2"
            android:layout_height="@dimen/item_drawer_image_size2"
            android:elevation="10dp"
            android:background="@drawable/new_box">

            <ImageView
                android:id="@+id/img_new_item"
                android:src="@android:drawable/ic_input_add"
                android:layout_height="@dimen/item_drawer_image_size"
                android:layout_width="@dimen/item_drawer_image_size"
                android:layout_gravity="center" />
        </FrameLayout>


    </RelativeLayout>

</RelativeLayout>