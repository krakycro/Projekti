<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/drawer_handle_width"
        android:layout_height="match_parent"
        android:background="@color/DrawerHandle">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_handle_height"
            android:layout_centerInParent="true"
            android:background="@color/DrawerHandleMiddle"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/item_menu_edit"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/item_drawer_image_size2"
        android:layout_height="@dimen/item_drawer_image_size2"
        android:tag="UP"
        android:src="@android:drawable/ic_menu_edit"/>

    <ImageButton
        android:id="@+id/item_menu_delete"
        android:layout_toRightOf="@id/item_menu_edit"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/item_drawer_image_size2"
        android:layout_height="@dimen/item_drawer_image_size2"
        android:tag="UP"
        android:src="@android:drawable/ic_menu_delete"/>

</RelativeLayout>